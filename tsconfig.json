{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2017",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "lib": [
            "es6",
            "dom",
            "es2015.iterable",
            "es2017"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "app/*"
            ]
        },
        "moduleResolution": "node",
        "removeComments": false
    },
    "include": [
        "./reference.d.ts",
        "app/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "platforms"
    ]
}
