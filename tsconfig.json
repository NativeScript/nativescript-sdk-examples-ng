{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2017",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "lib": [
            "es2018", "es2017", "dom", "es6"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "app/*"
            ]
        }
    },
    "include": [
        "app/**/*.ts"
    ],
    "files": [
        "./references.d.ts",
        "./app/main.ts"
    ],
    "exclude": [
        "node_modules",
        "platforms",
        "e2e"
    ]
}
